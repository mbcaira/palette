{
  "root": true,
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "prettier",
  ],
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint"],
  "ignorePatterns": ["src/**/*.test.ts", "src/frontend/generated/*"],
  "rules": {
    "quotes": ["error", "single", { "avoidEscape": true }],
  },
}
